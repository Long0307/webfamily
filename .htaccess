RewriteEngine On
RewriteRule "index.htm" "index.php"
RewriteRule "^([a-zA-Z0-9]+).html$" "index.php?controller=$1"
RewriteRule "^shop&trang=([0-9]+)$" "index.php?controller=shop&trang=$1"
RewriteRule "^shop/([0-9]+)/([a-zA-Z0-9-]+).html$" "index.php?controller=shop&idlsp=$1&ten_lsp=$2"
RewriteRule "^shop/([0-9]+)/([a-zA-Z0-9-]+).html&trang=([0-9]+)$" "index.php?controller=shop&idlsp=$1&ten=$2&trang=$3"
RewriteRule "^shop/([0-9]+)/([0-9]+)/([a-zA-Z0-9-]+).html$" "index.php?controller=shop&idlsp=$1&idsp=$2&ten_sp=$3"
RewriteRule "^new/([0-9]+)/([a-zA-Z0-9-]+).html$" "index.php?controller=new&idnew=$1&ten_new=$2"
RewriteRule "^order.html&token=([0-9]+)$" "index.php?controller=order&token=$1"

RewriteRule "admin/login/" "View/admin/login.php"
RewriteRule "admin/dashboard/" "View/admin/index.php"
RewriteRule "^admin/([a-zA-Z0-9]+)/$" "View/admin/index.php?controller=$1"
RewriteRule "^admin/([a-zA-Z0-9]+)/([a-zA-Z0-9]+)/$" "View/admin/index.php?controller=$1&action=$2"
RewriteRule "^admin/([a-zA-Z0-9-]+)/([a-zA-Z0-9-]+)/([0-9]+)/([a-zA-Z0-9-]+).html$" "View/admin/index.php?controller=$1&action=$2&id=$3&name=$4"
RewriteRule "^admin/([a-zA-Z0-9]+)&page=([0-9]+)$" "View/admin/index.php?controller=$1&trang=$2"
RewriteRule "^admin/([a-zA-Z0-9]+)&per=([0-9]+)$" "View/admin/index.php?controller=$1&per=$2"
RewriteRule "^admin/([a-zA-Z0-9]+)&page=([0-9]+)&per=([0-9]+)$" "View/admin/index.php?controller=$1&trang=$2&per=$3"
